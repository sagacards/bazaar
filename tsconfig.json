{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": [
      "DOM"
    ],
    "outDir": "./dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": [
    "lib/**/*"
  ],
  "exclude": [
    "./tests",
    "./node_modules",
    "./dist"
  ]
}